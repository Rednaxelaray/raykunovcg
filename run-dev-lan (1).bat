@echo off
REM --------------------------------------------------------
REM  run-dev-lan.bat — старт Astro dev‑сервера,
REM  доступного по локальной сети (host 0.0.0.0, порт 4321).
REM  Поместите файл в корень проекта рядом с package.json
REM --------------------------------------------------------

pushd "%~dp0"
echo --------------------------------------------------------
echo  Astro dev server (LAN mode)
echo  Будет доступен на http://<IP_ПК>:4321
echo  Нажмите CTRL+C, чтобы остановить.
echo --------------------------------------------------------
npm run dev -- --host 0.0.0.0
popd
pause
