---
export interface Props { title: string }
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ru">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>

    <style>
      :root { font-family: system-ui, sans-serif; line-height: 1.4; }
      body  { margin: 0; }

      header {
        display: grid;
        grid-template-columns: auto 1fr auto;
        align-items: center;
        padding: 1.5rem 4vw;
      }
      header h1 {
        margin: 0;
        justify-self: center;
        font: 400 1.6rem/1.2 system-ui, sans-serif;
      }
      nav a {
        margin-right: 2rem;
        font-weight: 600;
        text-decoration: none;
        color: inherit;
      }
      nav a:last-child { margin: 0; }
      nav a:hover      { opacity: .7; }

      .container {
        width: min(96%, 1800px);
        margin-inline: auto;
      }
    </style>

    <!-- CSS лайтбокса -->
    <link rel="stylesheet" href="/css/simple-lightbox.min.css" is:inline>
  </head>

  <body>
    <header>
      <nav>
        <a href="/">Главная</a>
        <a href="/contacts">Контакты</a>
      </nav>

      <h1>Александр&nbsp;Райкунов&nbsp;– CG&nbsp;artist</h1>
      <div></div>
    </header>

    <main class="container">
      <slot />
    </main>

    <!-- JS лайтбокса -->
    <script src="/js/simple-lightbox.min.js" is:inline></script>
    <script is:inline>
      document.addEventListener('DOMContentLoaded', () => {
        new SimpleLightbox('.slb');
      });
    </script>
  </body>
</html>
